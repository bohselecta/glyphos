{
  "name": "glyphos",
  "version": "1.0.0",
  "description": "GlyphOS - A web-native operating system for creative applications",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dev:cli": "tsx cli/index.ts",
    "dev:kernel": "tsx kernel/core.ts",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "operating-system",
    "web-native",
    "pwa",
    "desktop",
    "creative-tools"
  ],
  "author": "GlyphOS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "yjs": "^13.6.0",
    "y-webrtc": "^10.2.0",
    "y-indexeddb": "^9.0.0",
    "y-websocket": "^1.4.0",
    "lib0": "^0.2.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "semver": "^7.5.0",
    "fuse.js": "^7.0.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "inquirer": "^9.2.0",
    "glob": "^10.3.0",
    "mime-types": "^2.1.35"
  },
  "bin": {
    "glyph": "./dist/cli/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
