{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/kernel/*": ["./kernel/*"],
      "@/runtime/*": ["./runtime/*"],
      "@/desktop/*": ["./desktop/*"],
      "@/sandbox/*": ["./sandbox/*"],
      "@/sdk/*": ["./sdk/*"],
      "@/types/*": ["./types/*"],
      "@/cli/*": ["./cli/*"]
    }
  },
  "include": [
    "src/**/*",
    "kernel/**/*",
    "runtime/**/*",
    "desktop/**/*",
    "sandbox/**/*",
    "sdk/**/*",
    "types/**/*",
    "cli/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
