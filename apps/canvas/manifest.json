    "description": "Creative drawing with procedural brushes and effects",
    "categories": ["creative", "tools"],
    "icons": [
      {
        "src": "icon.svg",
        "sizes": "any",
        "type": "image/svg+xml"
      }
    ],
    "display": "fullscreen",
    "themeColor": "#8b5cf6",
    "backgroundColor": "#000000"
  },
  
  "author": {
