    "registry": "https://apps.glyphd.com"
  },
  
  "entry": {
    "html": "index.html",
    "integrity": "sha384-..."
  },
  
  "capabilities": {
    "storage": {
      "blob": true,
      "quota": "200MB"
    },
    "compute": {
      "workers": 2
    }
  },
  
  "extensions": {
    "fileHandlers": [
      {
        "extensions": [".glyph"],
        "accept": {
          "image/x-glyph": [".glyph"]
